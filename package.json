{
  "name": "erb-linter",
  "publisher": "manuelpuyol",
  "displayName": "ERB Linter",
  "description": "execute erb-lint for ERB code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:erb",
    "onCommand:erb.erb-lintlint"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "erb",
        "extensions": [
          ".erb"
        ]
      }
    ],
    "commands": [
      {
        "command": "erb.erb-lintlint",
        "title": "ERB: lint with erb-lint"
      },
      {
        "command": "editor.action.formatDocument",
        "title": "ERB: autocorrect with erb-lint"
      }
    ],
    "keybindings": [
      {
        "key": "shift+ctrl+r",
        "command": "editor.action.formatDocument",
        "when": "editorLangId == 'erb'"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ERB Linter configuration",
      "properties": {
        "erb.erb-lint.executePath": {
          "type": "string",
          "default": "",
          "description": "execution path of erb-lint."
        },
        "erb.erb-lint.configFilePath": {
          "type": "string",
          "default": "",
          "description": "Filepath to the configuration file for erb-lint"
        },
        "erb.erb-lint.onSave": {
          "type": "boolean",
          "default": true,
          "description": "execute erb-lint on save."
        },
        "erb.erb-lint.useBundler": {
          "type": "boolean",
          "default": false,
          "description": "execute erb-lint using bundler (ie 'bundle exec erb-lint')"
        },
        "erb.erb-lint.suppressERBLintWarnings": {
          "type": "boolean",
          "default": false,
          "description": "Suppress warnings from erb-lint and attempt to run regardless. (Useful if you share a erb-lint.yml file and run into unrecognized cop errors you know are okay.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.57.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
